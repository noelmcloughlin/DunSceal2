<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.noel.dunsceal">

    <application
        android:allowBackup="false"
        android:name="org.noel.dunsceal.main.DunScealApplication"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".activity.DunsActivity"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AppTheme.OverlapSystemBar">
        </activity>
        <activity android:name=".main.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.auth.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.auth.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.auth.UsersListActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>
